{
  "$schema": "../gen/schemas/desktop-schema.json",
  "productName": "RAIN.CHAT v2",
  "version": "2.0.0",
  "identifier": "com.rain-chat.rain-chat-v2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "RAIN.CHAT v2 - Professional AI IDE",
        "width": 1600,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-toggle-maximize",
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-message",
            "dialog:allow-ask",
            "dialog:allow-confirm",
            "dialog:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2024 RAIN.CHAT Team",
    "shortDescription": "Professional Desktop AI IDE with Native Performance",
    "longDescription": "RAIN.CHAT v2 is a professional desktop IDE for AI development with native performance, offline capabilities, and advanced development tools.",
    "targets": "all",
    "icon": ["icons/icon.ico"]
  },
  "plugins": {}
}